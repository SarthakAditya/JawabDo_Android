<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ShowQuizzes">

    <TextView
        android:id="@+id/noQuizzesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="@string/noQuiz" />

    <ListView
        android:id="@+id/quizList2"
        android:layout_width="351dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:divider="@android:color/transparent"
        android:layout_above="@+id/addQuizButton"
        android:orientation="vertical"
        android:dividerHeight="10.0sp"
        android:scrollbars="none">

    </ListView>

    <Button
        android:layout_marginLeft="10dp"
        android:padding="20dp"
        android:background="@drawable/button_rectangle_green"
        android:id="@+id/addQuizButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="addQuiz"
        android:text="@string/addQuiz" />


</RelativeLayout>